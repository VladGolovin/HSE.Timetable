{{#if label}}
<label>{{label}}</label>
{{/if}}
<div class="ui input flexberry-textbox">
{{#if readonly}}
  {{input
      type=type
      value=(get this "_value")
      readonly="readonly"
      required=required
      placeholder=placeholder
      maxlength=maxlength
    }}
  {{else}}
    {{input
      type=type
      value=_value
      required=required
      placeholder=placeholder
      maxlength=maxlength
    }}
  {{/if}}
</div>